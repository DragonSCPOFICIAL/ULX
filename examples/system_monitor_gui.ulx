// FunÃ§Ã£o principal
funcao principal() {
    var gui = inicializar_gui();
    
    enquanto (gui.running) {
        // Limpar tela (ANSI escape code)
        escreva("\x1b[2J\x1b[H");
        
        // Desenhar interface
        desenhar_header(&gui);
        desenhar_card_cpu();
        desenhar_card_memoria();
        desenhar_card_armazenamento();
        desenhar_card_uptime();
        desenhar_top_processos();
        desenhar_rede();
        desenhar_footer();
        
        // Aguardar 2 segundos antes de atualizar
        dormir(2000);
    }
}

// Ponto de entrada
