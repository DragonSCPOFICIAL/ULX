// Exemplo de Jogo Nativo em ULX

func main() {
    // Configura a janela do jogo
    ui_window("Super Dragon Game", 800, 600)
    
    // Inicializa o motor de jogo
    game_init()
    
    // Carrega o herói (a imagem será embutida no .ulx)
    game_load_sprite("player", "assets/hero.png")
    
    // Lógica simples de movimento
    func update() {
        game_draw_sprite("player", 400, 300)
    }
    
    game_on_update(update)
    
    // Roda o jogo nativamente
    dragon_run()
}
